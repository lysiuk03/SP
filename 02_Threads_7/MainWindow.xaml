<Window x:Class="_02_Threads_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_Threads_7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox  Name="listbox"></ListBox>
        <StackPanel Grid.Column="1">
            <Label FontSize="16">Minimum:</Label>
            <TextBox IsEnabled="False" Name="minimum" Margin="10"></TextBox>
            <Label FontSize="16">Maximum:</Label>
            <TextBox IsEnabled="False" Name="maximum" Margin="10"></TextBox>
            <Label FontSize="16">Average:</Label>
            <TextBox IsEnabled="False" Name="avg" Margin="10"></TextBox>
            <Button Margin="10" Name="start" Click="start_Click"  FontSize="16">Start</Button>
        </StackPanel>

    </Grid>
</Window>
